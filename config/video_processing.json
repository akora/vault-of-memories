    "tech": {
      "filename_patterns": [
        "coding",
        "programming",
        "developer",
        "demo",
        "screencast",
        "tech",
        "bug",
        "feature",
        "debug",
        "development"
      ],
      "device_patterns": [
        "screen record",
        "obs",
        "quicktime",
        "screencast"
