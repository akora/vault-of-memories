{
  "categorization_rules": {
    "family": {
      "camera_indicators": [
        "iphone",
        "android",
        "samsung",
        "canon",
        "nikon",
        "sony",
        "fujifilm",
        "olympus",
        "panasonic",
        "gopro"
      ],
      "device_patterns": [
        "phone",
        "camera",
        "gopro",
        "action cam"
      ],
      "filename_patterns": [
        "family",
        "vacation",
        "birthday",
        "holiday",
        "kids",
        "home",
        "wedding",
        "party",
        "trip",
        "travel"
