  "supported_formats": [
    "mp4",
    "avi",
    "mov",
    "mkv",
    "wmv",
    "webm",
    "m4v",
    "mpg",
    "mpeg",
    "flv",
    "f4v"
  ],
  "quality_thresholds": {
    "hd_min_width": 1280,
    "hd_min_height": 720,
    "4k_min_width": 3840,
    "4k_min_height": 2160,
    "min_acceptable_fps": 24,
    "high_fps_threshold": 60
  },
  "extraction_preferences": {
    "prefer_embedded_metadata": true,
    "extract_gps_data": true,
    "extract_camera_info": true,
    "normalize_timestamps": true
  }
